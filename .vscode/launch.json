  "version": "0.2.0",
  "configurations": [

    //compile, run qemu and debug
    {
      "name": "Debug stm32 in qemu",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/firmware.elf",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "run dbg",
      "miDebuggerServerAddress": "localhost:1234",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb-multiarch",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ],
      "presentation": {
        "reveal": "silent",
        "close": true,
      }
    },
    //run without debuging
    {
      "name": "Run stm32 in qemu",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/firmware.elf",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "run",
      "presentation": {
        "reveal": "silent",
        "close": true,
      }
    }
  ]
}