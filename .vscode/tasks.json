{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "make",
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "shell",
      "label": "clean",
      "command": "make clean"
    },
    {
      "type": "shell",
      "label": "run dbg",
      //nie działa
      //"command": "make rundbg",
      "command": "echo 'QEMU started'; qemu-system-arm -M netduinoplus2 -s -S -kernel ${workspaceFolder}/firmware.elf",
      "dependsOn": ["build"],
      "isBackground": true,
      //sprawdzamy czy qemu wystartował
      //sprawdzając czy w konsoli pojawił się napis "QEMU started"
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "QEMU started"
          }
        }
      ]
    }
  ]
}
